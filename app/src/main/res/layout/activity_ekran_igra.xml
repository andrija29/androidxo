<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ekranIgra">

    <EditText
        android:id="@+id/textPotez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Na potezu je: Igrac 1 (X)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="467dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="40dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/dugme1"
                android:layout_width="128dp"
                android:layout_height="128dp" />

            <Button
                android:id="@+id/dugme2"
                android:layout_width="128dp"
                android:layout_height="128dp" />

            <Button
                android:id="@+id/dugme3"
                android:layout_width="128dp"
                android:layout_height="128dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/dugme4"
                android:layout_width="128dp"
                android:layout_height="128dp" />

            <Button
                android:id="@+id/dugme5"
                android:layout_width="128dp"
                android:layout_height="128dp" />

            <Button
                android:id="@+id/dugme6"
                android:layout_width="128dp"
                android:layout_height="128dp" />
        </TableRow>

        <TableRow
            android:layout_width="128dp"
            android:layout_height="128dp">

            <Button
                android:id="@+id/dugme7"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:width="dugme1" />

            <Button
                android:id="@+id/dugme8"
                android:layout_width="128dp"
                android:layout_height="128dp" />

            <Button
                android:id="@+id/dugme9"
                android:layout_width="128dp"
                android:layout_height="128dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>
</android.support.constraint.ConstraintLayout>